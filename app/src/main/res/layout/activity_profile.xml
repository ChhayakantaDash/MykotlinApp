<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgchhaya"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/chaaya"
        android:layout_margin="20dp"

        />
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chhayakanta Dash"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imgchhaya"/>
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chhayakantdash143@gmail.com"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imgchhaya"
        android:layout_below="@id/txtName"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9861378752"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imgchhaya"
        android:layout_below="@id/txtEmail"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MORE INFORMATION"
        android:backgroundTint="#1565c0"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_below="@+id/imgchhaya"
        android:layout_margin="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT APP"
        android:backgroundTint="#E83845"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18sp"

        android:layout_alignParentBottom="true"/>
</RelativeLayout>